{
  "name": "auth-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "test": "mocha",
    "dev": "NODE_PATH=./src nodemon --exec babel-node src/app.js",
    "build": "babel src --out-dir dist",
    "start": "NODE_PATH=./src node bootstrap.js",
    "lint": "standard --verbose",
    "fixcode": "standard --fix",
    "precommit": "npm run lint",
    "deploy-setup": "pm2 deploy ecosystem.config.js setup",
    "deploy": "pm2 deploy ecosystem.config.js production"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "husky": "^0.14.3",
    "nodemon": "^1.9.2"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "jsonwebtoken": "^8.1.0",
    "mocha": "^4.0.1",
    "mongoose": "^4.10.7",
    "pm2": "^2.7.2",
    "prettier": "^1.8.1",
    "standard": "^10.0.3"
  },
  "standard": {
    "globals": [
      "it",
      "describe"
    ],
    "rules": {
      "space-before-function-paren": 0
    }
  }
}
